<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Global color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary_variant</item>
        <item name="colorOnSecondary">@color/color_on_primary</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/color_on_error</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="android:statusBarColor">@color/color_status_bar</item>

        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Body1</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="textAppearanceBody1">@style/AppTheme.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/AppTheme.TextAppearance.Body2</item>
        <item name="textAppearanceButton">@style/AppTheme.TextAppearance.Button</item>
        <item name="textAppearanceHeadline1">@style/AppTheme.Headline1</item>
        <item name="textAppearanceHeadline2">@style/AppTheme.Headline2</item>
        <item name="textAppearanceHeadline3">@style/AppTheme.Headline3</item>
        <item name="textAppearanceHeadline4">@style/AppTheme.Headline4</item>
        <item name="textAppearanceHeadline5">@style/AppTheme.Headline5</item>
        <item name="textAppearanceHeadline6">@style/AppTheme.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/AppTheme.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/AppTheme.Subtitle2</item>
        <item name="textAppearanceCaption">@style/AppTheme.Caption</item>
        <item name="textAppearanceOverline">@style/AppTheme.Overline</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>
    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@color/color_primary</item>
    </style>

    <style name="AppTheme.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:textSize">@dimen/text_size_xxxxxxxxlarge</item>
    </style>
    <style name="AppTheme.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:textSize">@dimen/text_size_xxxxxxxlarge</item>
    </style>
    <style name="AppTheme.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:textSize">@dimen/text_size_xxxxxxxlarge</item>
    </style>
    <style name="AppTheme.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_xxxxxxlarge</item>
    </style>
    <style name="AppTheme.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:textSize">@dimen/text_size_xxxxxlarge</item>
    </style>
    <style name="AppTheme.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:textSize">@dimen/text_size_xxxxlarge</item>
    </style>
    <style name="AppTheme.Explain.Headline" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:textSize">@dimen/text_size_xxxlarge</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.166666667</item>
    </style>
    <style name="AppTheme.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.166666667</item>
    </style>
    <style name="AppTheme.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="AppTheme.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">@dimen/corner_small</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Button</item>
    </style>
    <style name="AppTheme.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="strokeWidth">@dimen/border_large</item>
        <item name="cornerRadius">@dimen/corner_small</item>
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Button</item>
    </style>
    <style name="AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Button</item>
    </style>
    <style name="AppTheme.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    <style name="AppTheme.DropDownButton" parent="AppTheme.OutlinedButton">
        <item name="android:textColor">@color/color_primary</item>
<!--        <item name="backgroundTint">@color/button_background_checkable</item>-->
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_black_small</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="AppTheme.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Body1</item>
    </style>
    <style name="AppTheme.PreviewText" parent="AppTheme.TextView">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.PreviewText</item>
    </style>
    <style name="AppTheme.TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>
    <style name="AppTheme.TextAppearance.PreviewText" parent="AppTheme.TextAppearance.Body1">
        <item name="android:textColor">@color/gray_170</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>
    <style name="AppTheme.TextAppearance.Body2" parent="AppTheme.TextAppearance.Body1">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="AppTheme.HeadlineSurface" parent="AppTheme">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Body1</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:background">@color/color_surface</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">start|center</item>
    </style>
    <style name="AppTheme.NavItemButton" parent="AppTheme.TextButton">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Body1</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@color/color_on_background</item>
    </style>
    <style name="AppTheme.LargeLabel" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <style name="AppTheme.LargeValue" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/text_size_xxxxlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <style name="AppTheme.EditText" parent="AppTheme.TextView">
        <item name="android:background">@null</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textCapSentences|textAutoCorrect</item>
    </style>
    <style name="AppTheme.TermsOfService" parent="AppTheme.TextView">
        <item name="android:gravity">center|top</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:letterSpacing">0.06</item>
    </style>
    <style name="Content" parent="AppTheme.TextAppearance.Body1" />
    <style name="DatePicker" parent="AppTheme" >
        <item name="android:textSize">30sp</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:spinnersShown">true</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

</resources>
