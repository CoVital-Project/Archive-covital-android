<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Description" parent="TextAppearance.AppCompat.Body1">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="LongTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="LongDescription" parent="TextAppearance.AppCompat.Body1">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="Headline" parent="TextAppearance.AppCompat.Title">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Content" parent="TextAppearance.AppCompat.Body1" />
    <style name="DatePicker" parent="AppTheme" >
        <item name="android:textSize">30sp</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:spinnersShown">true</item>
        <item name="android:datePickerMode">spinner</item>
    </style>


</resources>
